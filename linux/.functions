function ff() {
    if [ "$1" == "" ]; then
        echo "Usage: ff file_pattern [string_pattern]"
        return
    fi

    if [ "$2" == "" ]; then
        find . -iname "$1"
    else
        find . -iname "$1" -exec grep -l -i "$2" {} \;
    fi
}

# Use Gitâ€™s colored diff when available
hash git &>/dev/null;
if [ $? -eq 0 ]; then
    function diff() {
        git diff --no-index --color-words "$@";
    }
fi;
